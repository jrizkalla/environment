
" Why download a plugin manager when I can do it manually?
" (I'm too lazy to try to figure out how plugin managers work with git
" submodules)
filetype plugin on
" Load the plugins...

" lervag/vimtex
let &runtimepath .= ",~/.vim/plugins/vimtex"
" scrooloose/nerdtree
let &runtimepath .= ",~/.vim/plugins/nerdtree"
" tmhedberg/SimpylFold
let &runtimepath .= ",~/.vim/plugins/SimpylFold"
" takac/vim-hardtime
let &runtimepath .= ",~/.vim/plugins/vim-hardtime"
" tmux-plugins/vim-tmux-focus-events
let &runtimepath .= ",~/.vim/plugins/vim-tmux-focus-events"

" And of course, my awesome plugin...
let &runtimepath .= ",~/.vim/plugins/personal"




